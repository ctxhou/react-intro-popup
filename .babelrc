{
  "presets": ["react", "es2015", "stage-0"],
  "plugins": [
    "transform-decorators-legacy",
    "add-module-exports"
  ],
  "env": {
    "development": {
      "presets": ["react-hmre"],
      "plugins": [
        "add-module-exports"
      ]
    },
    "production": {
      "plugins": [
        "transform-react-remove-prop-types"
      ]
    }
  }
}
